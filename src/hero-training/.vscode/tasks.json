{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "sync dependencies",
            "type": "shell",
            "command": "uv sync --group dev",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "train (long config)",
            "type": "shell",
            "command": "uv run python -m hero_training.cli --config configs/yolo11n-long.yaml",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "NEXUS_BASE_DIR": "${workspaceFolder}/../.."
                }
            },
            "dependsOn": ["sync dependencies"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "train (rtx4080 config)",
            "type": "shell",
            "command": "uv run python -m hero_training.cli --config configs/yolo11n-rtx4080.yaml",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "NEXUS_BASE_DIR": "${workspaceFolder}/../.."
                }
            },
            "dependsOn": ["sync dependencies"],
            "problemMatcher": []
        },
        {
            "label": "train (long dry-run)",
            "type": "shell",
            "command": "uv run python -m hero_training.cli --config configs/yolo11n-long.yaml --dry-run",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "NEXUS_BASE_DIR": "${workspaceFolder}/../.."
                }
            },
            "dependsOn": ["sync dependencies"],
            "problemMatcher": []
        },
        {
            "label": "train (rtx4080 dry-run)",
            "type": "shell",
            "command": "uv run python -m hero_training.cli --config configs/yolo11n-rtx4080.yaml --dry-run",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "NEXUS_BASE_DIR": "${workspaceFolder}/../.."
                }
            },
            "dependsOn": ["sync dependencies"],
            "problemMatcher": []
        },
        {
            "label": "sync cuda dependencies",
            "type": "shell",
            "command": "uv sync --group dev --group cuda-cu124",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        }
    ]
}
