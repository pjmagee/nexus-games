{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build project",
            "type": "shell",
            "command": "dotnet build Control.csproj -c Debug",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$msCompile"],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "run controller",
            "type": "shell",
            "command": "dotnet run --project Control.csproj",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": ["build project"],
            "problemMatcher": []
        },
        {
            "label": "clean build",
            "type": "shell",
            "command": "dotnet clean Control.csproj",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        }
    ]
}
